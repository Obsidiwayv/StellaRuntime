<Window x:Class="StellaBootstrapper.BootStrapperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StellaBootstrapper"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Title="BootStrapperWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="799*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="BackgroundImage" Margin="0,-24,0,-3" Grid.ColumnSpan="3" Stretch="UniformToFill"/>
        <Rectangle Grid.Column="1" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush SpreadMethod="Pad" MappingMode="RelativeToBoundingBox" EndPoint="0,1" StartPoint="1,0">
                    <GradientStop Color="#00000000"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="StatusText" Content="#StatusText" HorizontalAlignment="Left" Margin="10,0,0,0" Width="540" FontSize="48" Grid.Column="1" Foreground="White" FontWeight="Bold" Height="98" VerticalAlignment="Bottom"/>
        <ProgressBar x:Name="Progress" Margin="10,0,9,10" Foreground="White" BorderBrush="Black" Background="{x:Null}" Grid.Column="1" Height="18" VerticalAlignment="Bottom"/>
        <Button Click="CancelButton_Click" x:Name="CancelButton" Content="Cancel" Grid.ColumnSpan="2" Margin="0,0,10,33" Foreground="White" Background="Black" Height="39" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="182" FontSize="18" BorderBrush="White" BorderThickness="2,2,2,2"/>
    </Grid>
</Window>
