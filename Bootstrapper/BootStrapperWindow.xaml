<Window x:Class="StellaBootstrapper.BootStrapperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StellaBootstrapper"
        mc:Ignorable="d"
        Title="BootStrapperWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="799*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="BackgroundImage" Margin="0,-6,0,0" Grid.ColumnSpan="2"/>
        <Label x:Name="StatusText" Content="#StatusText" HorizontalAlignment="Left" Margin="10,348,0,0" VerticalAlignment="Top" Height="86" Width="220" FontSize="36" Grid.Column="1"/>
        <ProgressBar x:Name="Progress" Height="9" Margin="10,415,9,0" VerticalAlignment="Top" Foreground="#FF151515" BorderBrush="White" Background="{x:Null}" Grid.Column="1"/>

    </Grid>
</Window>
